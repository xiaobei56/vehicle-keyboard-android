<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.parkingwang.vehiclekeyboard.demo.MainActivity">

    <com.parkingwang.keyboard.view.InputView
        android:id="@+id/input_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="6dp"
        app:pwkItemBorderSelectedColor="@color/input_back_selected"
        app:pwkInputTextSize="22sp"/>


    <Button
        android:id="@+id/show_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="弹对话框" />


    <Button
        android:id="@+id/btn_show_car_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="show inputView"

        />
</LinearLayout>
